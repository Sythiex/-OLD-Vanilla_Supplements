# Configuration file

general {
    # Change to false to remove the MC 1.8 recipe for mossy cobblestone [default: true]
    B:"Enable 1.8 mossy cobblestone recipe"=true

    # Change to false to remove convenience recipies for clay [default: true]
    B:"Enable clay recipies"=true

    # Change to false to remove cotton seed drops [default: true]
    B:"Enable cotton plants"=true

    # Change to false to remove crafting recipies for emerald tools/armor [default: true]
    B:"Enable emerald tools/armor"=true

    # Change to false to remove crafting grass blocks with dirt and seeds [default: true]
    B:"Enable grass block recipe"=true

    # Change to true to allow crafting string from wool (CAN BE EXPLOITED IF USING NATURA) [default: false]
    B:"Enable string recipe"=true

    # Change to false to remove crafting vines from grass [default: true]
    B:"Enable vine recipe"=true
}


